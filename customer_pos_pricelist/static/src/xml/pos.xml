<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ClientDetailsEdit">
        <t t-jquery="div.client-details-left" t-operation="append">
             <t t-jquery="div.client-detail" t-operation="after">

                 <div class='client-detail'>
        <span class='label'>Pricelist</span>
            <select class='detail client-pricelist' name='pricelist'>
                 <option value=''>None</option>
                    <t t-foreach='widget.pos.pricelistss' t-as='pricelistt'>
                      <option t-att-value='pricelistt.id ' t-att-selected="partner.pricelist ? ((pricelistt.id === partner.pricelist[0]) ? true : undefined) : undefined">
                       <t t-esc='pricelistt.name'/>
                   </option>
                  </t>
              </select>
    </div>

       </t></t></t>

  <t t-extend="ClientDetails">
           <t t-jquery="div.client-details-left" t-operation="append">
             <t t-jquery="div.client-detail" t-operation="after">
                     <div class='client-detail'>
                        <span class='label'>Pricelist</span>
                          <t t-if='partner.pricelist'>
                            <span class='detail client-pricelist'><t t-esc='partner.pricelist' /></span>
                        </t>
                        <t t-if='!partner.pricelist'>
                            <span class='detail client-pricelist'>N/A</span>
                        </t>

                    </div>
    </t></t></t>

    <t t-extend="ClientListScreenWidget">
        <t t-jquery="tr" t-operation="append">
            <th>PriceList</th>
        </t></t>

    <t t-extend="ClientLine">
        <t t-jquery="tr.client-line" t-operation="append">
           <td><t t-esc='partner.pricelist' /></td>
        </t></t>

</templates>